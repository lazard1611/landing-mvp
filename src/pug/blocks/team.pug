section.section.team.js-section-trigger.js-team-section.js-header-disable
	.team__in
		.team__title_wrap
			h2.team__title.js-title-split Meet the team.
			button(aria-label= 'scroll next section').team__button.js-team-btn.js-cursor-scale
				+icon('chevron_down')
		ul.team__list
			each item, index in dataTeam
				li.team__item.js-team-item
					.team__item_in
						.team__pic_wrap
							+picture({
								img: `team/${index}.jpg`,
								class: 'team__pic',
								img_class: 'team__img',
								alt: item.name,
							})
							+picture({
								img: `team/${index}_hover.jpg`,
								class: 'team__pic team__pic--hover_mod',
								img_class: 'team__img',
								alt: item.name,
							})
						.team__name!= item.name
						.team__text
							.team__position!= item.position
							.team__description!= item.description
